<h1>Detleted Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Status</th>
      <th colspan="3">Actions </th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
        <tr>
        <td><%= order.id %></td>
        <td><%= order.status.capitalize %></td>
        <td><%= link_to 'View Order', order_path(order) %></td>
        <td><%= link_to "Recover", recover_order_path(order) %></td>
        <td><%= button_to "Delete", order_path(order), method: :delete %></td>
        </tr>
    <% end %>
  </tbody>
</table>
<br>