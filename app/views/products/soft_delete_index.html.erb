<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th colspan="3">Actions </th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name.truncate(40, omission: '...') %></td>
        <td><%= product.price %></td>
        <td><%= product.description.truncate(40, omission: '...') %></td>
        <td> <%= link_to "Show", product_path(product) %> </td>
        <td><%= link_to "Recover", recover_product_path(product) %></td>
        <td><%= button_to "Delete", product_path(product), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="pagination">
  <%= paginate @products %>
</div>
